#!/bin/bash

# --- 1. SETUP DIRECTORIES ---
mkdir -p ~/.config
mkdir -p ~/.local/share

# --- 2. CONFIGURATION ---
# Define your dotfiles path (use absolute path)
DOT_DIR="$HOME/dotfiles"

# List all items inside ~/dotfiles/.config/ that you want to link
CONFIG_ITEMS=(
    "nvim" "starship.toml" "swaylock" "kitty" "wlogout" 
    "hypr" "fish" "fastfetch" "Code" "rofi" "scripts" "Wallpapers"
)

# --- 3. EXECUTION ---

# A. Link Fonts
echo "Linking fonts..."
rm -rf ~/.local/share/fonts
ln -s "$DOT_DIR/fonts" ~/.local/share/fonts
fc-cache -fv > /dev/null

# B. Link .config items using a loop
echo "Linking config files..."
for item in "${CONFIG_ITEMS[@]}"; do
    rm -rf "$HOME/.config/$item"
    ln -s "$DOT_DIR/.config/$item" "$HOME/.config/$item"
    echo "  [âœ”] $item"
done

# C. Link home files (like .zshrc)
echo "Linking home files..."
rm -f "$HOME/.zshrc"
ln -s "$DOT_DIR/.zshrc" "$HOME/.zshrc"

echo "--- All done! ---"
